<%= form_with(model: car, local: true) do |form| %>

  <%=render 'common/errors' , resource: car %>



    <div class="field">
      <%= form.label :type_id %>

      <%= form.select :type_id, options_for_select(Car::CAR_TYPE.collect { |k, v| [t(v), k] }, @car.type_id), {}, :class=>"form-control" %>
    </div>


  <div class="field">
    <%= form.label :top_seats %>
    <%= form.text_field :top_seats, :class=>"form-control" %>
  </div>

  <div class="field">
    <%= form.label :bottom_seats %>
    <%= form.text_field :bottom_seats, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :train %>
    <%= form.collection_select :train_id, Train.all, :id, :number , {} ,:class=>"form-control"%>
  </div>


  <div class="actions">
      <%= form.submit 'Сохранить',:class=>"btn btn-success" %>
    </div>
  <% end %>