<%= form_with(model: [train, car], local: true, url: car.new_record? ? train_cars_path(train) : car_path(car), scope: :car) do |form| %>

  <%= render 'common/errors', resource: car %>



  <div class="field">
    <%= form.label :type %>

    <%= form.select :type, options_for_select(Car::CAR_TYPE.collect { |k, v| [v[:label], k] }, car.type), {}, :class => "form-control" %>
  </div>


  <div class="field">
    <%= form.label :top_seats %>
    <%= form.text_field :top_seats, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.label :bottom_seats %>
    <%= form.text_field :bottom_seats, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.label :side_top_seats %>
    <%= form.text_field :side_top_seats, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.label :side_bottom_seats %>
    <%= form.text_field :side_bottom_seats, :class => "form-control" %>
  </div>




  <div class="actions">
    <%= link_to "Назад", train, class: 'btn btn-default' %>
    <%= form.submit "#{car.new_record? ? 'Добавить' : 'Изменить'}", :class => "btn btn-success" %>
  </div>
<% end %>