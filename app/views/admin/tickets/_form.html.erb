<%= form_with(model: [:admin, ticket], local: true, scope: :ticket) do |form| %>

  <%= render 'common/errors', resource: ticket %>



  <% if !ticket.new_record? %>
    <div class="field">
      <%= form.label :train %>
      <%= ticket.train.number %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.label :middle_name %>
    <%= form.text_field :middle_name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start_station %>

    <%= form.collection_select :start_station_id, RailwayStation.in_route(train.route), :id, :title, {}, :class => "form-control", :autocomplete => "off" %>

  </div>

  <div class="form-group">
    <%= form.label :end_station %>

    <%= form.collection_select :end_station_id, RailwayStation.in_route(train.route), :id, :title, {}, :class => "form-control", :autocomplete => "off" %>

  </div>



  <div class="actions">
    <%= form.submit 'Сохранить', :class => "btn btn-success" %>
  </div>
<% end %>