<tr>
  <td><%= train.number %></td>
  <td><%= train.route.nil? ? "-" : train.route.name %></td>
  <td><%= link_to t('common.view'), [:admin, train], :class => 'btn btn-xs btn-info' %></td>
  <td><%= link_to t('common.edit'), edit_admin_train_path(train), :class => 'btn btn-xs btn-success' %></td>
  <td><%= link_to t('common.delete'), [:admin, train], method: :delete, data: {confirm: t('common.confirm_delete')}, :class => 'btn btn-xs btn-danger' %></td>
</tr>