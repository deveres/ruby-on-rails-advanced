<%= form_with(model: [:admin, train], local: true) do |form| %>

  <%= render 'common/errors', resource: train %>

  <div class="form-group">
    <%= form.label :number %>
    <%= form.text_field :number, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :route_id %>
    <%= form.collection_select :route_id, Route.all, :id, :name, {}, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.check_box :cars_order %>
    <%= form.label :cars_order %>
  </div>

  <div class="form-group">
    <%= form.submit t('.submit', action: train.new_record? ? t('common.create') : t('common.edit')), :class => "btn btn-success" %>
  </div>
<% end %>
