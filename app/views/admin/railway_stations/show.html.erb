<%= render "common/admin_page_header",
           with_button: false,
           page_title: 'Данные о станции',
           button_title: nil,
           button_url: nil
%>





<p>
  <strong>Название:</strong>
  <%= @railway_station.title %>
</p>
<br>
<br>

<% if @railway_station.routes.empty? %>
  <div class="alert alert-info" role="alert">
    Станция не входит ни в один маршрут
  </div>

<% else %>
  <h5 class="text-success">Станция входит в следующие маршруты:</h5>
  <ul class="list-style">
    <% @railway_station.routes.each do |route| %>
      <li><%= route.name %></li>
    <% end %>
  </ul>
<% end %>

<%= link_to 'Редактировать', edit_admin_railway_station_path(@railway_station) %> |
<%= link_to 'Назад', admin_railway_stations_path %>
