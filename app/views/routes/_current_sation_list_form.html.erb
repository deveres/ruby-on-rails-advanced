<%= form_tag update_params_railway_station_path(station), method: :patch do %>


  <div class="form-group row">
    <div class="col-md-3"><label><%= :position %></label></div>
    <div class="col-md-3">
      <%= number_field_tag :position, station.position_in(@route), class: 'form-control' %>
      <%= hidden_field_tag :route_id, @route.id %>
    </div>
    <div class="col-md-5">
      <%= submit_tag "Применить", :class => "btn btn-success btn-xs" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-3"><label><%= :arrival_time %>:</label></div>
    <div class="col-md-8" style='display:inline-flex'>
      <%= datetime_select :arrival_time,
                          :date,
                          {start_year: Time.now.year, default: station.arrival_time(@route)},
                          {class: 'form-control w-25', style: 'display:inline-flex'} %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3"><label><%= :departure_time %>:</label></div>
    <div class="col-md-8" style='display:inline-flex'>
      <%= datetime_select :departure_time, :date,
                          {start_year: Time.now.year, default: station.departure_time(@route)},
                          {class: 'form-control w-25'} %>
    </div>
  </div>



<% end %>