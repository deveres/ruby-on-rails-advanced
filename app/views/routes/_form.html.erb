<%= form_with(model: route, local: true) do |form| %>

  <%= render 'common/errors', resource: route %>



  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :railway_station_ids, t('.route_stations') %><br>
    <%= form.collection_select :railway_station_ids,
                               RailwayStation.all, :id, :title, {},
                               {multiple: true, class: 'form-control'} %>
  </div>

  <div class="actions">
    <%= form.submit 'Сохранить', :class => "btn btn-success" %>
  </div>
<% end %>