<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>
<h1>Данные маршрута</h1>
<hr>

<p>
  <strong>Название маршрута:</strong>
  <%= @route.name %>
</p>
<br>
<br>

<% if @route.trains.empty? %>

  <%= render 'no_trains' %>
<% else %>
  <%= render 'current_trains' %>
<% end %>


<hr>

<% if @route.railway_stations_routes.empty? %>
  <%= render 'no_stations' %>
<% else %>
  <%= render 'current_stations' %>
<% end %>
<hr>

<h4>Добавление станции в маршрут</h4>

<%= form_for([@route, @route.railway_stations_routes.build]) do |f| %>


  <div class="form-group">
    <%= f.label :railway_station %>
    <%= f.collection_select :railway_station_id, RailwayStation.all, :id, :title, {}, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit('Добавить станцию', {:class => 'btn btn-warning'}) %>
  </div>
<% end %>


<%= link_to 'Редактировать', edit_route_path(@route) %> |
<%= link_to 'Назад', routes_path %>
