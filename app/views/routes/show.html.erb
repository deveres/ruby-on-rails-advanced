<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>
<h1>Данные маршрута</h1>
<hr>

<p>
  <strong>Название маршрута:</strong>
  <%= @route.name %>
</p>
<br>
<br>

<% if @route.trains.empty? %>

  <%= render 'no_trains' %>
<% else %>
  <%= render 'current_trains' %>
<% end %>


<hr>

<% if @route.railway_stations.empty? %>
  <%= render 'no_stations' %>
<% else %>
  <%= render 'current_stations' %>
<% end %>
<hr>

<h4>Добавление станции в маршрут</h4>

<%= form_tag add_station_to_route_path(@route), method: :post do %>

  <div class="form-group">
    <%= label_tag :railway_station %>
    <%= select_tag :railway_station_id, options_for_select(RailwayStation.pluck(:title, :id)), :class => "form-control" %>

  </div>
  <div class="form-group">
    <%= label_tag :position %>
    <%= number_field_tag :position, {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= submit_tag('Добавить станцию', {:class => 'btn btn-warning'}) %>
  </div>
<% end %>


<%= link_to 'Редактировать', edit_route_path(@route) %> |
<%= link_to 'Назад', routes_path %>
