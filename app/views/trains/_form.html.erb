<%= form_with(model: train, local: true) do |form| %>

  <%=render 'common/errors' , resource: train %>

  <div class="form-group">
    <%= form.label :number %>
    <%= form.text_field :number, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :current_route %>
    <%= form.collection_select :current_route_id, Route.all, :id, :name , {} ,:class=>"form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :current_station %>
    <%= form.collection_select :current_station_id, RailwayStation.all, :id, :title,{} ,:class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "#{ train.new_record? ? 'Создать' : 'Изменить' }",:class=>"btn btn-success" %>
  </div>
<% end %>
