<%= form_with(model: train, local: true) do |form| %>

  <%=render 'common/errors' , resource: train %>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number %>
  </div>

  <div class="field">
    <%= form.label :current_route %>
    <%= form.collection_select :current_route_id, Route.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :current_station %>
    <%= form.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="actions">
    <%= form.submit "#{ train.new_record? ? 'Создать' : 'Изменить' }" %>
  </div>
<% end %>
