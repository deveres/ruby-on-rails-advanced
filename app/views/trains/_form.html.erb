<%= form_with(model: train, local: true) do |form| %>

  <%= render 'common/errors', resource: train %>

  <div class="form-group">
    <%= form.label :number %>
    <%= form.text_field :number, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :route %>
    <%= form.collection_select :route_id, Route.all, :id, :name, {}, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.check_box :cars_order %>
    <%= form.label :cars_order, "Вагоны: 0 - с головы поезда / 1 - с хвоста поезда" %>
  </div>

  <div class="form-group">
    <%= form.submit "#{ train.new_record? ? 'Создать' : 'Изменить' }", :class => "btn btn-success" %>
  </div>
<% end %>
